
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
}

model Filmes {
  id String @id @default(uuid())
  name String
  director String
  synopsis String
  gender filmesGender
  releaser String
  images Json[]
}

enum filmesGender {
  ACAO
  AVENTURA
  COMEDIA
  DRAMA
  FICCAO
  TERROR
  ROMANCE
  FANTASIA
  MUSICAL
  DOCUMENTARIO
}